@model IEnumerable<Task_Mangement.Models.Task>

@{
    ViewData["Title"] = "Index";    
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskTitle)
                <div class="header-filter input-group" style="width: 15rem;">
                    <input value="" name="title" id="title" class="form-control"
                           placeholder="Task Title" type="text">
                </div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="table-body">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskTitle)
            </td>
            <td class="status">
                @Html.DisplayTextFor(modelItem => item.TaskStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDueDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
        crossorigin="anonymous"></script>

<script type="text/javascript">
    // Handle checkbox display
    $(".status").each(function(index) {     
        var text = $(this).text();
        text = text.replace(/\s/g, '');                
        if (text == "True") $(this).html("Done");
        else $(this).html("Pending");
    })

    // handle filter submit
    $(document).keypress(function (event) {
        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            $.ajax({
                url: `http://localhost:5265/NewTask/Filter?title=${$("#title").val()}`,
                method: "post",
                context: {"title": $("#title").val()}
            }).done(function (data) {
                console.log(data);
                var htmlText = data.map(d => {                                                   
                    if (d.taskStatus == true) status = "Done";
                    else status = "Pending";
                    return `
                                <tr>
                                    <td>${d.taskTitle}</td>
                                    <td>${status}</td>
                                    <td>${d.taskDescription}</td>
                                    <td>${d.taskDueDate}</td>
                                </tr>`
                }).join(" ");
                $("#table-body").html(htmlText);
            })  
        }

    });
</script>
